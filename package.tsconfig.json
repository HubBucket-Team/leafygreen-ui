{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "pretty": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@leafygreen-ui/*": ["packages/*/src"]
    },
    "emitDeclarationOnly": true,
    "composite": true
  },
  "exclude": ["*.story.*", "*.spec.*", "dist"]
}
